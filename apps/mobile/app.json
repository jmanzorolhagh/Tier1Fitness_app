{
  "expo": {
    "name": "Tier1Fitness",
    "slug": "tier1fitness-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "entryPoint": "./index.js",

    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
        "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jmanzorolhagh.tier1fitnessApp",
      "infoPlist": {
        "NSMotionUsageDescription": "This app uses the pedometer to track your daily steps for the leaderboard."
      }
    },
    "android": {
      "package": "com.jmanzorolhagh.tier1fitness_app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/fitness.jpg",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-sensors",
        {
          "motionPermission": "Allow Tier1Fitness to access your pedometer to track steps."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_PROJECT_ID"
      }
    }
  }
}